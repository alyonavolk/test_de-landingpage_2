:root {

    /* цвета */
    --colorBiscay: #1F3F68;
    --colorAzure: #316099;
    --colorAstral: #356EAD;
    --colorDanube: #5A98D0;
    --colorWhite: #FFF;
    --colorScarlet: #FF3600;

    /* отступы */
    --paddingTopBottom: 170px;
    --paddingLeftRight: 50px;
}


@media (width <= 1200px) {
    :root {
        --paddingTopBottom: 40px;
        --paddingLeftRight: 50px;
    }
}
