.team {
    max-width: 860px;
    margin: 0 auto;
    padding: 100px  0 100px 2.2vw;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
}

.team__title {
    color: var(--colorWhite);
    max-width: 320px;
    padding-bottom: 30px;
}

.team__descr {
    color: var(--colorWhite);
    max-width: 460px;
}

.team__btn {
    max-width: 220px;
    color: var(--colorWhite);
}